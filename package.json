    "@japa/snapshot": "^2.0.9",
    "@stylistic/eslint-plugin": "^5.2.0",
    "@swc/core": "1.11.24",
    "@types/luxon": "^3.6.2",
    "@types/node": "^22.15.18",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.26.0",
    "hot-hook": "^0.4.0",
    "pino-pretty": "^13.0.0",
