    "@adonisjs/auth": "^9.4.2",
    "@adonisjs/cors": "^2.2.1",
    "@adonisjs/lucid": "^21.8.0",
    "@adonisjs/mail": "^9.2.2",
    "@vinejs/vine": "^3.0.1",
    "better-sqlite3": "^12.2.0",
    "edge.js": "^6.3.0",
    "japa": "^4.0.0",
    "luxon": "^3.7.1",
    "reflect-metadata": "^0.2.2",
    "sqlite3": "^5.1.7"
  },
  "hotHook": {
    "boundaries": [
      "./app/controllers/**/*.ts",
      "./app/middleware/*.ts"
    ]
